{
	"compilerOptions": {
        "jsx": "react",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"module": "CommonJS",
		"lib": [
			"ES2019",
			"ES2015",
			"DOM"
		],
		"target": "ES2019",
		"outDir": "./dist",
		"sourceMap": true,
		"declaration": true,
		"strict": true,
		"skipLibCheck": true,
		"preserveConstEnums": true,
		"typeRoots": [
			"./node_modules/@types"
		],
		"strictPropertyInitialization": false,
	},
	"exclude": [
		"dist",
		"node_modules",
		"docs",
		"example",
		"ui-tests"
	]
}