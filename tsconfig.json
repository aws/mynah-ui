{
	"compilerOptions": {
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"module": "CommonJS",
		"lib": [
			"ES2019",
			"ES2015",
			"DOM"
		],
		"target": "ES2019",
		"outDir": "./dist",
		"sourceMap": true,
		"removeComments": true,
		"declaration": true,
		"strict": true,
		"preserveConstEnums": true,
		"typeRoots": [
			"./node_modules/@types"
		],
		"strictPropertyInitialization": false,
	},
	"include": ["src/**/*"],
	"exclude": [
		"jest.config.ts",
		"dist",
		"node_modules"
	]
}