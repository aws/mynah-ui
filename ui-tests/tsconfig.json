{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "commonjs",
        "target": "ES2019",
        "lib": [
            "ES2020",
            "es5",
            "es6",
            "dom"
        ],
        "outDir": "out",
        "sourceMap": true,
        "strict": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "strictPropertyInitialization": false
    },
    "exclude": [
        "dist",
        "node_modules"
    ]
}